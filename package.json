{
	"name": "odysseus-monorepo",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"workers/*"
	],
	"scripts": {
		"dev": "pnpm --filter=odysseus dev",
		"dev:manifestify": "pnpm --filter=manifestify dev",
		"build": "pnpm -r build",
		"deploy": "pnpm -r deploy",
		"start": "pnpm --filter=odysseus start",
		"start:manifestify": "pnpm --filter=manifestify start",
		"lint": "pnpm -r lint",
		"lint:fix": "pnpm -r lint:fix",
		"format": "pnpm -r format",
		"format:check": "pnpm -r format:check",
		"cf-typegen": "pnpm -r cf-typegen",
		"push": "pnpm --filter=odysseus push"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mjs,cjs}": "eslint --fix",
		"*.{ts,tsx,js,jsx,mjs,cjs,json,md,yaml,yml}": "prettier --write"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.7.4",
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^24.0.3",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "^9.29.0",
		"prettier": "^3.0.0",
		"typescript": "^5.5.2",
		"typescript-eslint": "^8.35.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4",
		"wrangler": "^4.32.0"
	},
	"dependencies": {
		"eslint-plugin-drizzle": "^0.2.3"
	}
}